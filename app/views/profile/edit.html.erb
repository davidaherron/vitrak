<%= form_for @profile do |f| %>

  <div class='field'>
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>

  <div class='field'>
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class='field'>
    <%= f.label :weight %><br />
    <%= f.text_field :weight %>
  </div>

  <div class='field'>
    <%= f.label :height %><br />
    <%= f.text_field :height %>
  </div>

  <div class='field'>
    <%= f.label :gender %><br />
    <%= f.text_field :gender %>
  </div>

  <div class='field'>
    <%= f.label :activity %><br />
    <%= f.text_field :activity %>
  </div>

  <%= f.hidden_field :user_id, :value => current_user.id %>
  
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>